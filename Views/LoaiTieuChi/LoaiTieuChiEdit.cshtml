@model KPIKietHong.Models.Tblloaitieuchi

@{
    ViewBag.Title = "LoaiTieuChiEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>
<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Sửa Nhóm Tiêu Chí </h4>
    </div>
</div>
<div class="white-box">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Tblloaitieuchi</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Idloaitc)

            <div class="form-group">
                @Html.LabelFor(model => model.Tenloaitc, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Tenloaitc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Tenloaitc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Trangthaitc, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Trangthaitc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Trangthaitc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-6 col-md-6">
                </div>
                <input type="submit" value="Lưu dữ liệu" class="btn btn-info" />
            </div>
        </div>
    }

    </div>
    <div>
        <i class="fa fa-arrow-left"></i><span> @Html.ActionLink("Quay về loại tiêu chí", "LoaiTieuChiAsync")</span>
    </div>
<script src="~/Scripts/jquery-3.2.1.min.js"></script>
   
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/validate-custom.js"></script>
