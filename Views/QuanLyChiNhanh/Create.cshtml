@model KPIKietHong.Models.Tblquanlychinhanh

@{
    ViewBag.Title = "Thêm quản lý chi nhánh- KPI Kiệt Hồng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row bg-title">
<div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
    <h4 class="page-title">Quản lý Chi nhánh </h4>
</div>
</div>

<div class="white-box">
    <h2>Thêm quản lý chi nhánh</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
          
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Iduser, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.Iduser, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.Iduser, ViewBag.listnv as SelectList, "Chọn người dùng...", new { @class = "form-control " })
                    @Html.ValidationMessageFor(model => model.Iduser, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Idchinhanh, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Idchinhanh, ViewBag.listcn as SelectList, "Chọn chi nhánh...", new { @class = "form-control " })
                    @Html.ValidationMessageFor(model => model.Idchinhanh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Trangthaiquanly, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Trangthaiquanly, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Trangthaiquanly, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-6 col-md-6">

                </div>
                <input type="submit" value="Lưu dữ liệu" class="btn btn-info" />
                <input type="reset" value="Xóa" class="btn btn-default" />

            </div>
        </div>
    }

    <div>
        <i class="fa fa-arrow-left"></i><span> @Html.ActionLink("Quay về quản lý chi nhánh", "Index","QuanLyChiNhanh")</span>
    </div>
</div>

<script src="~/Scripts/jquery-3.2.1.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
