@model KPIKietHong.Models.Tblchinhanh

@{
    ViewBag.Title = "Thêm chi nhánh";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Chi nhánh </h4>
    </div>
</div>

<div class="white-box">
    <h2>Thêm chi nhánh</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
          
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

            <div class="form-group">
                @Html.LabelFor(model => model.Machinhanh, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Machinhanh, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mã chi nhánh" } })
                    @Html.ValidationMessageFor(model => model.Machinhanh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Tenchinhanh, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Tenchinhanh, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên chi nhánh" } })
                    @Html.ValidationMessageFor(model => model.Tenchinhanh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Tragnthaicn, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Tragnthaicn, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Tragnthaicn, "", new { @class = "text-danger" })

              
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-6 col-md-6">
                    
                </div>
                <input type="submit" value="Lưu dữ liệu" class="btn btn-info" />
                <input type="reset" value="Xóa" class="btn btn-default" />
            </div>
        </div>
    }

    <div>     
        <i class="fa fa-arrow-left"></i><span> @Html.ActionLink("Quay về chi nhánh", "ChiNhanhAsync")</span>
    </div>
</div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
