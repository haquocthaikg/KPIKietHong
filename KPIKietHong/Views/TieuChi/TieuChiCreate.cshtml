                    @Html.ValidationMessageFor(model => model.Idnhomtieuchi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Trangthaitc, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Trangthaitc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Trangthaitc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Diemtieuchi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Diemtieuchi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Diemtieuchi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Idloaitc, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Idloaitc, ViewBag.LoaiTieuChiList as SelectList, "----chọn----", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Idloaitc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-6 col-md-6">

                </div>
                <input type="submit" value="Lưu dữ liệu" class="btn btn-info" />
                <input type="reset" value="Xóa" class="btn btn-default" />
            </div>
        </div>
    }
</div>
    <div>
    <i class="fa fa-arrow-left"></i><span> @Html.ActionLink("Quay về Danh Sách Tiêu Chí", "TieuChiAsync")</span>
</div>
