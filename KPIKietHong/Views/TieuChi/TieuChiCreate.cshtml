                    @Html.EditorFor(model => model.Tentieuchi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Tentieuchi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Idchinhanh, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Idchinhanh, ViewBag.ChiNhanhList as SelectList, "----chọn----", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Idchinhanh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Idnhomtieuchi, htmlAttributes: new { @class = "control-label col-md-2" })
